<div id="register" class="container">
  <div class="page-header">
    <h1>Register for KeanBnB</h1>
  </div>
  <form>
    <h4>Basic Info</h4>
    <div class="form-group">
      <label for="firstName">Name</label>
      <div class="row">
        <div class="col-md-2">
          {{input class="form-control" id="firstName" placeholder="Connor"}}
        </div>
        <div class="col-md-1">
          {{input class="form-control" id="mi" placeholder="M"}}
        </div>
        <div class="col-md-2">
          {{input class="form-control" id="lastName" placeholder="Coffey"}}
        </div>
      </div>
    </div>
    <div class="form-group">
      <label for="street1">Home Address</label>
      <div class="row">
        <div class="col-md-5">
          {{input class="form-control" id="street1" placeholder="10 Flushing Ave."}}
        </div>
      </div>
      <div class="row">
        <div class="col-md-5">
          {{input class="form-control" id="street2" placeholder="Apt. 45B"}}
        </div>
      </div>
      <div class="row">
        <div class="col-md-2">
          {{input class="form-control" id="city" placeholder="Normal"}}
        </div>
        <div class="col-md-1">
          {{input class="form-control" id="state" placeholder="IL"}}
        </div>
        <div class="col-md-2">
          {{input class="form-control" id="zip" placeholder="61761"}}
        </div>
      </div>
    </div>
    <div class="form-group">
      <label for="cell">Phone Numbers</label>
      <div class="row">
        <div class="col-md-3">
          <div class="input-group">
            <span class="input-group-addon">Cell</span>
            {{input type="tel" class="form-control" id="cell"}}
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-3">
          <div class="input-group">
            <span class="input-group-addon">Home</span>
            {{input type="tel" class="form-control" id="home"}}
          </div>
        </div>
      </div>
    </div>
    <h4>Resident Info</h4>
    <div class="form-group">
      <label class="checkbox-inline">
        {{input type="checkbox" id="resident" checked=isResident}} I am a Resident
      </label>
    </div>
    {{#if isResident}}
      <div class="form-group">
        <label for="id">Student ID</label>
        <div class="row">
          <div class="col-md-3">
            {{input class="form-control" id="id" placeholder="648373"}}
          </div>
        </div>
      </div>
      <div class="form-group">
        <label for="building">Building</label>
        <div class="row">
          <div class="col-md-3">
            {{view Ember.Select class="form-control" id="building" contentBinding="buildings"}}
          </div>
        </div>
      </div>
      <div class="form-group">
        <label for="room">Room #</label>
        <div class="row">
          <div class="col-md-2">
            {{input class="form-control" id="room" placeholder="601A"}}
          </div>
        </div>
      </div>
    {{/if}}
    <div class="form-group">
      <a href="#" class="btn btn-primary btn-lg">Register</a>
    </div>
  </form>
</div>
